html
	head
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
		link(rel="stylesheet" type="text/css" href="customMind.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(charset="utf-8")
			
	body(id="indexPage")

		include nav
		br
		br
		br

		h3 Signup Form

		div(class="container")
			div(class="col-sm-1 col-md-offset-10")
				form(id= "signupForm" class="input-group input-group-sm" method="POST" action="/signUp")
					input(class="form-control" type="text" name="firstname" placeholder="First name*" required)
					input(class="form-control" type="text" name="lastname" placeholder="Last name*" required)
					input(class="form-control" type="text" name="email" placeholder="Email*" required)

					div(class="row")
						div(class="col-sm-4 input-group-sm")
							p(class="form-control") Date of Birth
						div(class="col-sm-8 input-group-sm")
							input(class="form-control" type="text" name="dateOfBirth" placeholder="DD/MM/YYYY" required)
					input(class="form-control" type="password" name="password" placeholder="Password*" required)
					input(class="form-control" type="password" placeholder="Confirm password*" required)
					div(class="row")
						div(class="col-sm-1 col-sm-offset-5 input-group-sm")
							input(class="form-control" id="checkboxSignin" type="checkbox" value="")
						div(class="col-sm-6 input-group-sm")
							label(id="labelCheckbox") Agree to our #[a(href="https://termsfeed.com/blog/sample-terms-and-conditions-template/" TARGET="_blank") Terms and Conditions]
					br
					br
					input(class="submitelement" id="submitSignup" type="submit" value="Sign up!")


	
	script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
